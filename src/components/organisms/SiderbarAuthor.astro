---
import { faAt } from "@fortawesome/free-solid-svg-icons";
import Sidebar from "../molecules/Sidebar.astro";

const { name, desc, icon } = Astro.props;
---
<Sidebar icon={faAt} text="この記事を書いた人">
    <div class="pt-3 pb-6">
        <div class="py-3">
            <img
                src={icon}
                class="size-20 rounded-full mx-auto"
            />
        </div>
        <h3 class="text-center mb-[10px]">
            {name}
        </h3>
        <p class="text-center text-[0.8rem] text-[#aaa]">
            {desc}
        </p>
    </div>
</Sidebar>
