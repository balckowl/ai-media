---
type Props = {
    value: string;
    placeholder: string;
    type?: astroHTML.JSX.HTMLInputTypeAttribute;
    name: string;
};

const { value, placeholder, name, type } = Astro.props;
---

<input
    type={type}
    name={name}
    value={value}
    placeholder={placeholder}
    class="w-full pr-4 pl-11 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
/>
